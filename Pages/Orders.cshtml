@page
@model RazorCoffeeApp.Pages.OrdersModel
@{
}

<h3>Orders</h3>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Coffe Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.CoffeeOrders){
            <tr>
                <td>@order.Id</td>
                <td>@order.CoffeeName</td>
                <td>@order.BasePrice
</td>
            </tr>
        }
      
    </tbody>
</table>